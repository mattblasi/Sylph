{{!< default}}

<section class="blog-info" {{#if @blog.cover}}style="background-image:url({{@blog.cover}});"{{/if}}>
	<h2>Welcome</h2>
	<h3>{{{@blog.description}}}</h3>
</section>

<main class="content" role="main" id="main">

    {{#foreach posts}}
    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <h3 class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></h3>
        </header>
        <section class="post-excerpt">
        	{{content words="0"}}
            <p>{{excerpt}}&hellip;</p>
            <a href="{{url}}" class="readmore">Read Post <i class="fa fa-chevron-right"></i></a>
            <div class="clearfix"></div>
        </section>
    </article>
    {{/foreach}}
    
    {{pagination}}

</main>